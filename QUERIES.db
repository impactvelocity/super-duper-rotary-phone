query SingleOrder {
  pickup_orders(where: {id: {_eq: 25}}) {
    customer_name
    customer_phone_number
    confirmed
    completed
    confirmation_method
    order_items {
      menu_item {
        name
        price
      }
      notes
    }
    order_items_aggregate {
      aggregate {
        count
      }
    }
  }
}

query ShowAllUnConfirmed {
  pickup_orders(where: {confirmed: {_eq: false}}) {
    customer_name
    customer_phone_number
    confirmed
    completed
    confirmation_method
    order_items_aggregate {
      aggregate {
        count
      }
    }
  }
}

query ShowAllUnCompleted {
  pickup_orders(where: {completed: {_eq: false}}) {
    customer_name
    customer_phone_number
    confirmed
    completed
    confirmation_method
    order_items_aggregate {
      aggregate {
        count
      }
    }
  }
}

subscription UserSubscription {
  pickup_orders(where: {id: {_eq: 25}}) {
  	confirmed
  }
}


